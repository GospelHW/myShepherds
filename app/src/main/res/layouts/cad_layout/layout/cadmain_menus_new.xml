<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:cacheColorHint="#00000000"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include layout="@layout/cadmain_padding_space_view" />

        <ImageButton
            android:id="@+id/imageButtonCmd_new_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_layer" />

        <include layout="@layout/cadmain_padding_space_view" />

        <ImageButton
            android:id="@+id/imageButtonCmd_new_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_layout" />

        <include layout="@layout/cadmain_padding_space_view" />

        <ImageButton
            android:id="@+id/imageButtonCmd_new_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_area" />

        <include layout="@layout/cadmain_padding_space_view" />

        <ImageButton
            android:id="@+id/imageButtonCmd_new_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_length" />

        <include layout="@layout/cadmain_padding_space_view" />

        <ImageButton
            android:id="@+id/imageButtonCmd_new_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_background" />

        <include layout="@layout/cadmain_padding_space_view" />

      <!--   <ImageButton
            android:id="@+id/imageButtonCmd_new_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/selector_cmd_export" />

        <include layout="@layout/cadmain_padding_space_view" /> -->
    </LinearLayout>

</HorizontalScrollView>