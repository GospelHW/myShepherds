<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="gospel.v2.PersonAcitvity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#378dcc"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/face"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/mount" />

        <TextView
            android:id="@+id/showlogname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:background="#5aa1d5"
            android:gravity="center"
            android:padding="2dp"
            android:text="Amen"
            android:textColor="@color/common_white"
            android:textSize="@dimen/personal_text_view1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <gospel.v2.ShuiBoWenView
            android:id="@+id/clgl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/celaing" />

            <TextView
                android:id="@+id/celiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Books"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>

        <gospel.v2.ShuiBoWenView
            android:id="@+id/sjgl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:clickable="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/datamanage" />

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="OrderList"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>

        <gospel.v2.ShuiBoWenView
            android:id="@+id/rwgl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:clickable="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/taskmanage" />

            <TextView
                android:id="@+id/task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="Shepherd"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>

        <gospel.v2.ShuiBoWenView
            android:id="@+id/aqgl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/safe_examine" />

            <TextView
                android:id="@+id/safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="..."
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <gospel.v2.ShuiBoWenView
            android:id="@+id/cadtz_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cad_img"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/datamanage" />

            <TextView
                android:id="@+id/cad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Analysis"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>

        <gospel.v2.ShuiBoWenView
            android:id="@+id/tjgl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_selecter"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image5"
                android:layout_width="85dp"
                android:layout_height="82dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@drawable/addmore" />

            <TextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ADD"
                android:textColor="#4e5f71"
                android:textSize="@dimen/personal_text_view2" />
        </gospel.v2.ShuiBoWenView>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="82dp"

            android:gravity="center_horizontal"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="82dp"

            android:gravity="center_horizontal"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <!--<WebView
        android:id="@+id/wv_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></WebView>-->
</LinearLayout>