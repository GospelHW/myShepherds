<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"  >
            <gradient android:startColor="#c0000000"  android:endColor="#00000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="@color/gray" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="#425F9F"  /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="5dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"  >
            <gradient android:startColor="#c0000000"  android:endColor="#00000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="#00ffffff" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="#425F9F"  /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="5dp" /><!-- 边角圆弧的半径 -->
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>
</selector>